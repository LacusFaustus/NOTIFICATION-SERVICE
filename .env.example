# Environment Configuration
# Copy this file to .env and update with your actual values

# Application Profiles
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/notifications
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=password

# Redis Configuration
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=

# RabbitMQ Configuration
SPRING_RABBITMQ_HOST=localhost
SPRING_RABBITMQ_PORT=5672
SPRING_RABBITMQ_USERNAME=guest
SPRING_RABBITMQ_PASSWORD=guest

# Email Configuration (SMTP)
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# JWT Security Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRATION=86400000

# Application Settings
NOTIFICATION_RATE_LIMIT=1000
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=1000
NOTIFICATION_BULK_BATCH_SIZE=100
NOTIFICATION_ATTACHMENT_MAX_SIZE=10485760

# Docker Configuration (for production)
DOCKER_REGISTRY=your-registry
DOCKER_NAMESPACE=your-namespace
DOCKER_IMAGE_TAG=latest

# Kubernetes Configuration (for production)
KUBERNETES_NAMESPACE=notification
KUBERNETES_CLUSTER=production

# Monitoring Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always

# Logging Configuration
LOGGING_LEVEL_COM_NOTIFICATIONSERVICE=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK=WARN
LOGGING_LEVEL_ORG_HIBERNATE=WARN

# Test Configuration (for test profile)
TEST_CONTAINERS_REUSE=true
TEST_EMAIL_MOCK=true

# Feature Flags
FEATURE_BULK_NOTIFICATIONS=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_EMAIL_ATTACHMENTS=true
FEATURE_TEMPLATE_MANAGEMENT=true

# External Services (for production)
FCM_SERVER_KEY=your-firebase-cloud-messaging-key
APNS_KEY_ID=your-apple-push-key-id
APNS_TEAM_ID=your-apple-team-id
APNS_KEY_FILE=path-to-your-p8-file

# Performance Settings
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=20
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
SPRING_REDIS_LETTUCE_POOL_MAX_ACTIVE=20
SPRING_REDIS_LETTUCE_POOL_MAX_IDLE=10

# Health Check Settings
MANAGEMENT_HEALTH_DB_ENABLED=true
MANAGEMENT_HEALTH_REDIS_ENABLED=true
MANAGEMENT_HEALTH_RABBIT_ENABLED=true

# Circuit Breaker Settings
RESILIENCE4J_CIRCUITBREAKER_INSTANCES_EMAILSERVICE_FAILURERATETHRESHOLD=50
RESILIENCE4J_CIRCUITBREAKER_INSTANCES_PUSHSERVICE_FAILURERATETHRESHOLD=50

# Cache Settings
SPRING_CACHE_TYPE=redis
SPRING_CACHE_REDIS_TIME_TO_LIVE=3600000

# Security Settings
SECURITY_JWT_SECRET=your-jwt-secret-key-here-must-be-secure
SECURITY_JWT_EXPIRATION=3600000

# CORS Settings (for frontend applications)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourapp.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# File Upload Settings
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=10MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=10MB

# Async Configuration
SPRING_TASK_EXECUTION_POOL_CORE_SIZE=5
SPRING_TASK_EXECUTION_POOL_MAX_SIZE=10
SPRING_TASK_EXECUTION_POOL_QUEUE_CAPACITY=100

# Scheduling Configuration
SPRING_TASK_SCHEDULING_POOL_SIZE=5

# Email Provider Settings
EMAIL_PROVIDER_PRIMARY=smtp-gmail-primary
EMAIL_PROVIDER_FAILOVER_ENABLED=true
EMAIL_PROVIDER_HEALTH_CHECK_INTERVAL=300000

# Notification Settings
NOTIFICATION_QUEUE_PROCESSING_ENABLED=true
NOTIFICATION_RETRY_ENABLED=true
NOTIFICATION_DLQ_ENABLED=true

# Monitoring and Metrics
MANAGEMENT_METRICS_EXPORT_PROMETHEUS_ENABLED=true
MANAGEMENT_ENDPOINT_PROMETHEUS_ENABLED=true

# Alerting Settings
ALERTING_ENABLED=true
ALERTING_WEBHOOK_URL=https://your-alerting-service.com/webhook

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
