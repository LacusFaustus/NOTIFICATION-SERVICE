{
  "dashboard": {
    "id": null,
    "title": "Notification Service Dashboard",
    "tags": ["notification", "microservice", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Notifications Sent",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(notification_emails_sent_total[5m])",
            "legendFormat": "Emails"
          },
          {
            "expr": "rate(notification_push_sent_total[5m])",
            "legendFormat": "Push"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "rate(notification_emails_failed_total[5m]) / (rate(notification_emails_sent_total[5m]) + rate(notification_emails_failed_total[5m])) * 100",
            "legendFormat": "Email Error Rate"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Processing Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(notification_email_processing_time_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(notification_email_processing_time_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Queue Size",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rabbitmq_queue_messages{queue=\"notification.queue\"}",
            "legendFormat": "Main Queue"
          },
          {
            "expr": "rabbitmq_queue_messages{queue=\"notification.dlq\"}",
            "legendFormat": "DLQ"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "System Resources",
        "type": "timeseries",
        "targets": [
          {
            "expr": "process_cpu_usage",
            "legendFormat": "CPU Usage"
          },
          {
            "expr": "jvm_memory_used_bytes / jvm_memory_max_bytes * 100",
            "legendFormat": "Memory Usage"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Retry Count",
        "type": "timeseries",
        "targets": [
          {
            "expr": "notification_retry_count",
            "legendFormat": "Retry Count"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s"
  }
}
